<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="Content-Type" const="text/html;charset=UTF-8" />
    <link href="http://fonts.googleapis.com/css?family=Comfortaa" rel="stylesheet" type="text/css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.4/socket.io.js"></script>
    <title>Simple Chat App</title>
  </head>

  <body>
    <header>
      <h1 id="title" >Super Chat</h1>
    </header>

    <select id="rooms" onchange="roomChange()">
      <option value="Super Chat" selected>Super Chat</option>
      <option value="Gaming">Gaming</option>
      <option value="Basketball">Basketball</option>
      <option value="Politics">Politics</option>
      <option value="Memes">Memes</option>
    </select>

    
    <section>
      <div id="change_username">
	<input id="username" type="text" />
	<button id="send_username" type="button" onclick="changeUsername()">Change username</button>
      </div>
    </section>

    <section id="chatroom">
      <section id="feedback"></section>
    </section>

    

    <section id="input_zone"> 
      <input id="message" class="vertical-align" type="text" onkeypress="keypress()" onkeyup=""/>
      <button id="send_message" class="vertical-align" type="button" onclick = "newMessage()">Send</button>
    </section>

    <script src="http://code.jquery.com/jquery-latest.min.js"></script>
    <script src="chat.js"></script>
  </body>
</html>